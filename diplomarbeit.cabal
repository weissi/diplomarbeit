Name:           diplomarbeit
Version:        0.1
License:        GPL-3
License-File:   LICENSE
Author:         Johannes WeiÃŸ
Maintainer:     weiss@tux4u.de
Cabal-Version:  >= 1.10
Build-Type:     Simple

Library
    Build-Depends:    base, HaskellForMaths >= 0.4, monadcryptorandom >= 0.4,
                      crypto-api >= 0.10, containers >= 0.4, mtl >= 2.0,
                      dlist >= 0.5, text >= 0.11
    Default-Language: Haskell2010
    Exposed-modules:  Codec.DARE, Codec.LBS, Data.ExpressionTypes
    hs-source-dirs:   Lib
    ghc-options:      -Wall
    ghc-options:      -Werror
    ghc-options:      -O2
    ghc-options:      -rtsopts -auto-all -caf-all

Executable ExprToMRM
    main-is:        ExprToMRM.hs
    Default-Language: Haskell2010
    build-depends:  base, text >= 0.11, containers >= 0.4, dlist >= 0.5,
                    mtl >= 2.0
    hs-source-dirs: ExprToMRM Lib
    ghc-options:    -Wall
    ghc-options:    -Werror
    ghc-options:    -O2
    ghc-options:    -rtsopts -auto-all -caf-all

Executable ExprToDARE
    main-is:        ExprToDARE.hs
    Default-Language: Haskell2010
    build-depends:  base, monadcryptorandom >= 0.4, crypto-api >= 0.10,
                    containers >= 0.4, HaskellForMaths >= 0.4, dlist >= 0.5,
                    diplomarbeit
    hs-source-dirs: ExprToDARE
    ghc-options:    -Wall
    ghc-options:    -Werror
    ghc-options:    -O2
    ghc-options:    -rtsopts -auto-all -caf-all

Test-Suite TestDARE
    type:          exitcode-stdio-1.0
    main-is:       TestDARE.hs
    Default-Language: Haskell2010
    build-depends: base, HTF >= 0.8, HaskellForMaths >= 0.4, crypto-api >= 0.10,
                   monadcryptorandom >= 0.4, containers >= 0.4, dlist >= 0.5,
                   mtl >= 2.0, random >= 1.0
    hs-source-dirs: Lib Test
